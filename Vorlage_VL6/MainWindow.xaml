        <TextBox x:Name="TB_ButtonA" HorizontalAlignment="Left" Height="25" Margin="49.71,335,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" FontSize="16" Grid.Column="1"/>
